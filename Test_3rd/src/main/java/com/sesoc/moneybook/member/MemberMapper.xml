<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sesoc.moneybook.member.MemberMapper">

	<!-- 로그인 -->
	<select id="login" parameterType="java.util.Map" resultType="com.sesoc.moneybook.vo.MemberVO">
		SELECT *
		  FROM moneybook_member
		 WHERE user_id  = #{userId}
		   AND user_pwd = #{userPwd}
	</select>

	<!-- 회원가입 -->
	<insert id="signup" parameterType="java.util.Map">
		INSERT INTO moneybook_member
		VALUES(#{userId}, #{userPwd})
	</insert>

</mapper>

